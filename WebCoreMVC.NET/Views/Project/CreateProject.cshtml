@using System.ComponentModel
@model Project

@{
    ViewData["Title"] = "CreateProject";
}
<link rel="stylesheet" type="text/css" href="/css/custom.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>

<div class="text-center container">
    <h1>CreateProject</h1>

    <h4>Project</h4>
    <hr/>
    <form asp-action="PostProject">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="projectId" type="hidden" class="form-control" value="-1" />
        <div class="form-group">
            <label class="control-label">Name</label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <input asp-for="status" class="form-control" type="hidden" value="ONGOING" />
        <div class="form-group">
            <label class="control-label">Number of iterations in the project</label>
            <select multiple class="sel form-control" style="width: 200px;" asp-for="numberOfIterations">
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                <option value="4">Four</option>
                <option value="5">Five</option>
                <option value="6">Six</option>
                <option value="7">Seven</option>
                <option value="8">Eight</option>
                <option value="9">Nine</option>
                <option value="10">Ten</option>
                <option value="11">Eleven</option>
                <option value="12">Twelve</option>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">Length of the sprint in days</label>
            <input asp-for="lengthOfSprint" class="form-control" />
            <span asp-validation-for="lengthOfSprint" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<script src="js/navbar.js"></script>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}